<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground" >

	 <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="32dp"
        android:layout_y="10dp"
        android:gravity="center"
        android:text="@string/app_title"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/end_point"
        android:layout_width="140dp"
        android:layout_height="35dp"
        android:layout_x="90dp"
        android:layout_y="232dp"
        android:background="@drawable/radios_around"
        android:ems="10"
        android:hint="导航终点" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="184dp"
        android:text="起点："
        android:textColor="#49d2ff"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="30dp"
        android:layout_y="240dp"
        android:text="终点："
        android:textColor="#49d2ff"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/start_point"
        android:layout_width="139dp"
        android:layout_height="35dp"
        android:layout_x="90dp"
        android:layout_y="176dp"
        android:background="@drawable/radios_around"
        android:ems="10"
        android:hint="导航起点" />

    <ImageButton
        android:id="@+id/exchange"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_x="244dp"
        android:layout_y="198dp"
        android:scaleType="fitXY"
        android:src="@drawable/exchange" />

    <Button
        android:id="@+id/navigate_back"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_x="172dp"
        android:layout_y="312dp"
        android:background="@drawable/radios_button"
        android:text="返  回"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/navigate_navigate"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_x="58dp"
        android:layout_y="312dp"
        android:background="@drawable/radios_button"
        android:text="導  航"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</AbsoluteLayout>