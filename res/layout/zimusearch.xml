<?xml version="1.0" encoding="UTF-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/keyword_background" >

    <EditText
        android:id="@+id/search_edit"
        android:layout_width="191dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_x="100dp"
        android:layout_y="161dp"
        android:background="@drawable/radios_around"
        android:hint="请输入查询的关键字"
        android:ems="10" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="18dp"
        android:layout_y="167dp"
        android:text="关键字："
        android:textColor="#49d2ff"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/search_zone_spinner"
        android:layout_width="190dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:layout_x="100dp"
        android:layout_y="107dp"
        android:entries="@+array/timeout_labels" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="40dp"
        android:layout_y="113dp"
        android:text="区域："
        android:textColor="#49d2ff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/back_btn"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_x="173dp"
        android:layout_y="243dp"
        android:background="@drawable/radios_button"
        android:textColor="#ffffff"
        android:text="返回" />

    <Button
        android:id="@+id/search_button"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_x="59dp"
        android:layout_y="243dp"
        android:background="@drawable/radios_button"
        android:textColor="#ffffff"
        android:text="@string/search" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="105dp"
        android:layout_y="10dp"
        android:text="关键字查询"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</AbsoluteLayout>