<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/registerbackground">
	  <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="32dp"
        android:layout_y="10dp"
        android:gravity="center"
        android:text="@string/app_title"
        android:textColor="#ffffff"
        android:textSize="20dp" />
    <EditText
        android:id="@+id/register_username"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_x="50dp"
        android:layout_y="73dp"
        android:ems="10" 
        android:hint="用户名"
        android:background="@drawable/radios_around">

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/register_emailbox"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_x="50dp"
        android:layout_y="113dp"
        android:ems="10"
        android:hint="邮箱"
        android:background="@drawable/radios_around" />

    <EditText
        android:id="@+id/register_password1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_x="50dp"
        android:layout_y="153dp"
        android:ems="10" 
        android:password="true"
        android:hint="密码（*）"
        android:background="@drawable/radios_around"/>

    <EditText
        android:id="@+id/register_password2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_x="50dp"
        android:layout_y="193dp"
        android:ems="10" 
        android:password="true"
        android:hint="确认密码（*）"
        android:background="@drawable/radios_around"/>

    <Button
        android:id="@+id/register_login"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_x="53dp"
        android:layout_y="250dp"
        android:text="注册" 
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:background="@drawable/radios_button"/>

    <Button
        android:id="@+id/register_back"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_x="161dp"
        android:layout_y="250dp"
        android:background="@drawable/radios_button"
        android:text="返回"
        android:textColor="#ffffff"
        android:textSize="20dp" />

</AbsoluteLayout>